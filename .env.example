# Environment Configuration for Flexible Testing Framework
# Copy this to .env and modify as needed

# Target Website Configuration
# Options: royalcaribbean, newsela (add more as framework expands)
TARGET_WEBSITE=newsela

# Base URL Override (optional - will use website config default if not set)
# BASE_URL=https://newsela.com

# Test Environment
TEST_ENV=production

# Browser Configuration
HEADLESS=false
DEFAULT_BROWSER=chromium

# Timeout Configuration (milliseconds)
DEFAULT_TIMEOUT=15000
SHORT_TIMEOUT=5000
LONG_TIMEOUT=30000

# Logging Configuration
LOG_LEVEL=info
ENABLE_SCREENSHOTS=true
ENABLE_PERFORMANCE_LOGGING=true

# Test Configuration
RUN_ACCESSIBILITY_TESTS=true
RUN_PERFORMANCE_TESTS=true
RUN_SECURITY_TESTS=false

# Site-Specific Configuration

# Royal Caribbean Specific Settings
RC_TEST_DESTINATION=Caribbean
RC_TEST_GUESTS=2
RC_TEST_DURATION=7

# Newsela Specific Settings
NEWSELA_GRADE_LEVEL=5
NEWSELA_SUBJECT=Science
NEWSELA_LANGUAGE=English
NEWSELA_TEST_ARTICLE=climate-change
NEWSELA_READING_LEVEL=4

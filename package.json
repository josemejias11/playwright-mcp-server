{
  "name": "webdriverio-mcp-server",
  "version": "1.0.0",
  "description": "MCP (Model Context Protocol) Server for Web Automation with WebDriverIO and TypeScript",
  "type": "module",
  "main": "dist/mcp-server.js",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/mcp-server.js",
    "dev": "tsx src/mcp-server.ts",
    "test": "npx wdio run ./wdio.conf.ts",
    "test:chrome": "BROWSERS=chrome npx wdio run ./wdio.conf.ts",
    "test:firefox": "BROWSERS=firefox npx wdio run ./wdio.conf.ts",
    "test:safari": "BROWSERS=safari npx wdio run ./wdio.conf.ts",
    "test:cross": "BROWSERS=chrome,firefox npx wdio run ./wdio.conf.ts",
    "test:all-browsers": "BROWSERS=chrome,firefox,safari npx wdio run ./wdio.conf.ts",
    "test:smoke": "npx wdio run ./wdio.conf.ts --spec ./tests/smoke/home.smoke.spec.ts",
    "test:a11y": "npx wdio run ./wdio.conf.ts --spec ./tests/accessibility/a11y.spec.ts",
    "test:links": "npx wdio run ./wdio.conf.ts --spec ./tests/links/link-health.spec.ts",
    "test:forms": "npx wdio run ./wdio.conf.ts --spec ./tests/forms/contact-form.spec.ts",
    "test:report": "npm run test && npm run allure:generate",
    "allure:generate": "allure generate reports/allure-results --clean -o reports/allure-report",
    "allure:open": "allure open reports/allure-report",
    "mcp:server": "tsx src/mcp-server.ts",
    "demo": "tsx examples/demo.ts",
    "setup": "npm install && npm run build",
    "clean": "rm -rf dist/ reports/ test-results/",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier . --write",
    "format:check": "prettier . --check"
  },
  "scripts": {

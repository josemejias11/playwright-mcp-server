{
  "name": "webdriverio-mcp-server",
  "version": "1.0.0",
  "description": "MCP (Model Context Protocol) Server for Web Automation with WebDriverIO and TypeScript",
  "type": "module",
  "main": "dist/mcp-server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/mcp-server.js",
    "dev": "tsx src/mcp-server.ts",
    "test": "wdio run ./wdio.conf.ts",
    "test:report": "npm run test && npm run allure:generate",
    "allure:generate": "allure generate reports/allure-results --clean -o reports/allure-report",
    "allure:open": "allure open reports/allure-report",
    "mcp:server": "tsx src/mcp-server.ts",
    "demo": "tsx examples/demo.ts",
    "setup": "npm install && npm run build",
    "clean": "rm -rf dist/ reports/ test-results/"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "webdriverio": "^8.28.0"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.0.0",
    "@wdio/allure-reporter": "^8.43.0",
    "@wdio/cli": "^8.28.0",
    "@wdio/json-reporter": "^8.43.0",
    "@wdio/junit-reporter": "^8.43.0",
    "@wdio/local-runner": "^8.28.0",
    "@wdio/mocha-framework": "^8.28.0",
    "@wdio/spec-reporter": "^8.28.0",
    "@wdio/types": "^8.28.0",
    "allure-commandline": "^2.34.1",
    "chromedriver": "^139.0.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "wdio-chromedriver-service": "^8.1.1"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "webdriverio",
    "typescript",
    "automation",
    "web-automation",
    "server"
  ],
  "author": "Development Team",
  "license": "MIT"
}
